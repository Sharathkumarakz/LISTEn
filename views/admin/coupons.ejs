<%- include("../layouts/admin/header.ejs") %>
<%- include("../layouts/admin/navbar.ejs") %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>
  <div class="page-wrapper">

    <div class="container-fluid">

      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h3 class="text-themecolor">Coupon list</h3>

        </div>

      </div>
      <a class="waves-effect waves-dark p-4" href="/admin/addCoupons" aria-expanded="false"><i
        class="fa fa-gift"></i><span class="hide-menu">Add Coupon</span></a>
      <!--djlkjlkajlkjkldajkkjslj-->
      <div class="row">
        <!-- column -->
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">All Coupons</h4>
              <h6 class="card-subtitle">Coupon <code>Table</code></h6>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Coupon Code</th>      
                                         
                      <th>ExpireDate</th>
                      <th>MaxDiscount</th>
                      <th>MinPurchaceAmount</th>
                      <th>percentageOff</th>
                      <th>Action</th>
                    
                    </tr>
                  </thead>
                  <tbody>
                    
                     <% coupons.forEach((element,index)=>{%>

                  
                    <tr>
                      <td><%=index+1 %></td>
                      <td> <%=element.code %></td>
                 
                      <td> <%=element.expirationDate %></td>
                      <td> <%=element.maxDiscount %></td>
                      <td> <%=element.MinPurchaceAmount %></td>
                      <td> <%=element.percentageOff %></td>
                      <td> <button style="background-color: rgb(205, 34, 34);color: rgb(255, 253, 253); border-radius:5px;" onclick="deleteCoupon('<%=element._id %>')">Delete</button> </td>
                      
                     

                          
                    </tr>
                    <%})%>
                 
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
   







      <!-- End Feeds -->
    </div>

  </div>

  
<script>
  function deleteCoupon(deleteId) {
      Swal.fire({
          title: 'Are you sure?',
          text: "You wan't to delete!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'yes, delete!'
      }).then((result) => {
             if (result.isConfirmed) {
                          $.ajax({
                              url: '/admin/deleteCoupon/' + deleteId,
                              method: 'get',
                              success: (response) => {
                                  Swal.fire({
                                      title: 'deleted!',
                                      text: 'Your deleted',
                                      icon: 'success',
                                      showConfirmButton: false
                                  })
                                  setTimeout(() => {
                                      location.reload()
                                  }, 1000);
                              }
                          })
                      }
      })
  }
</script>
