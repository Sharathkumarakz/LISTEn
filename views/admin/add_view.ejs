<%- include("../layouts/admin/header.ejs") %>
<%- include("../layouts/admin/navbar.ejs") %>

  <div class="page-wrapper">

    <div class="container-fluid">

      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h3 class="text-themecolor">Add Banner</h3>

        </div>

      </div>


      <!--djlkjlkajlkjkldajkkjslj-->

      <div class="col-lg-12 col-xlg-12 col-md-12">
        <div class="card">
          <!-- Tab panes -->
          <div class="card-body">
            <form action="/admin/addAdds" class="form-horizontal form-material" method="post"
              enctype="multipart/form-data">
              <div class="form-group">
                <label class="col-md-12">Heading</label>
                <div class="col-md-12">
                  <input type="text" name="head" class="form-control form-control-line">
                </div>
              </div>
              <div class="form-group">
                <label for="example-email" class="col-md-12">Descriotion</label>
                <div class="col-md-12">
                  <input type="text" name="description" class="form-control form-control-line" name="example-email"
                    id="example-email">
                </div>
              </div>
            
              <div class="form-group">
                <label class="col-sm-12">Url To categories</label>
                <div class="col-sm-12">
                  <select name="url" class="form-control form-control-line">
                    <option selected>Select the category</option>
                    <!-- <option value="sk">sk</option> -->


                    <% categoryData.forEach(element=> { %>
                      <option value="<%= element._id %>">
                        <%= element.categoryName %>
                      </option>
                      <% }); %>

                  </select>
                </div>

              </div>
              
             
              <div class="form-group">
                <label class="col-md-12">Image</label>
                <div class="col-md-12">
                  <input type="file" multiple name="image" class="form-control form-control-line">
                </div>
              </div>
             
              <div class="form-group">
                <div class="col-sm-12">
                  <button type='submit' class="btn btn-success">Submit</button>
                </div>
              </div>
            </form>
            <% if(typeof message !=='undefined' ){ %>
              <h5 style="color: rgb(224, 86, 86);">
                <%= message %>
              </h5>
              <% } %>
          </div>
        </div>
      </div>
      <!-- Column -->
    </div>
    <!-- Row -->
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
  </div>













  <!-- End Feeds -->



