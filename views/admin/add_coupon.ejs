<%- include("../layouts/admin/header.ejs") %>
<%- include("../layouts/admin/navbar.ejs") %>

  <div class="page-wrapper">

    <div class="container-fluid">

      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h3 class="text-themecolor">Add Coupons</h3>

        </div>

      </div>



      <% if(typeof message !=='undefined' ){ %>
        <h5 style="color: rgb(206, 47, 47);">
            <%= message %>
        </h5>
        <% } %>
      <div class="col-lg-12 col-xlg-12 col-md-12">
        <div class="card">
        
          <div class="card-body">
            <form action="/admin/addCoupons" class="form-horizontal form-material" method="post"
           id="addCoupon"  >
           <div id="alertpasswordUser1" class="alert alert-danger" role="alert" style="display: none;">

           </div>
        
              <div class="form-group">
                <label class="col-md-8">Coupon Code</label>
                <div class="col-md-8">
                  <input type="text" name="code" class="form-control form-control-line">
                </div>
              </div>
             
              <div class="form-group">
                <label class="col-md-12">Expire Date</label>
                <div class="col-md-8">
                    <input type="date" name="expirationDate"  id="date-input" class="form-control form-control-line" name="example-email"
                      id="example-email">
                  </div>
              </div>
              <div class="form-group">
                <label class="col-md-12">Maximum Discount</label>
                <div class="col-md-8">
                    <input type="number" name="maxDiscount" class="form-control form-control-line" name="example-email"
                      id="example-email">
                  </div>
              </div>
              <div class="form-group">
                <label class="col-md-8">Minimum Purchase Amount</label>
                <div class="col-md-8">
                    <input type="Number" name="MinPurchaceAmount" class="form-control form-control-line" name="example-email"
                      id="example-email">
                  </div>
              </div>
              <div class="form-group">
                <label class="col-md-12">Percentage Off</label>
                <div class="col-md-8">
                    <input type="Number" max="100" name="percentageOff" class="form-control form-control-line" name="example-email"
                      id="example-email">
                  </div>
              </div>
            
              <div class="form-group">
                <div class="col-sm-12">
                  <button type='submit' class="btn btn-success">Submit</button>
                </div>
              </div>
            </form>
           
          </div>
        </div>
      </div>
     
    </div>

  </div>




  <script>
    const form=document.querySelector('form');
    $('#addCoupon').submit(function (e) {
      e.preventDefault();
      var formData = $(this).serialize();
      const inputs = document.querySelectorAll('form input')
      let inputFieldNull = false
      for (let i = 0; i < inputs.length; i++) {
        if (inputs[i].value.trim() == "") {
          inputFieldNull = true
          $('#alertpasswordUser1').attr({ style: "display: block" }).html("All fields Required")
          setTimeout(() => {
            $('#alertpasswordUser1').hide()
          }, 3000)
        } 
      }if (!inputFieldNull) {
        inputFieldNull = true
          $('#alertpasswordUser').attr({ style: "display: block" }).html("Saved")
          setTimeout(() => {
            $('#alertpasswordUser1').hide()
          }, 3000)
          form.submit()
        }
    })

  </script>
  
<script>
  const dateInput = document.getElementById('date-input');
const today = new Date().toISOString().split('T')[0];
dateInput.setAttribute('min', today);
</script>




