<%- include("../layouts/admin/header.ejs") %>
<%- include("../layouts/admin/navbar.ejs") %>

        <div class="page-wrapper">

            <div class="container-fluid">

                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">Add Category</h3>

                    </div>

                </div>

                <div class="col-lg-12 col-xlg-12 col-md-12">
                    <div class="card">
                        <div id="alertpasswordUser" class="alert alert-success" role="alert" style="display: none;">

                        </div> <div id="alertpasswordUser1" class="alert alert-danger" role="alert" style="display: none;">

                        </div>

                        <div class="card-body">
                            <form action="/admin/addCategory" class="form-horizontal form-material" method="post" id="AddCoupon">
                                <div class="form-group">
                                    <label class="col-md-12">Category Name</label>
                                    <div class="col-md-12">
                                        <input type="text" name="name" class="form-control form-control-line">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12">Description</label>
                                    <div class="col-md-12">
                                        <input type="text" name="description" class="form-control form-control-line">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button type='submit' class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                            <% if(typeof message !=='undefined' ){ %>
                                <h5 style="color: rgb(47, 134, 206);">
                                    <%= message %>
                                </h5>
                                <% } %>
                                
                        </div>
                    </div>
                </div>

            </div>
  
        </div>
        
<script>
     const form=document.querySelector('form');
  $('#AddCoupon').submit(function (e) {
    e.preventDefault();
    var formData = $(this).serialize();
    const inputs = document.querySelectorAll('form input')
    let inputFieldNull = false
    for (let i = 0; i < inputs.length; i++) {
      if (inputs[i].value.trim() == "") {
        inputFieldNull = true
        $('#alertpasswordUser1').attr({ style: "display: block" }).html("All fields Required")
        setTimeout(() => {
          $('#alertpasswordUser1').hide()
        }, 3000)
      } 
    }if (!inputFieldNull) {
      inputFieldNull = true
        $('#alertpasswordUser').attr({ style: "display: block" }).html("Saved")
        setTimeout(() => {
          $('#alertpasswordUser1').hide()
        }, 3000)
        form.submit()
      }
  })
</script>
