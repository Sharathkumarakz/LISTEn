<%- include("../layouts/admin/header.ejs") %>
<%- include("../layouts/admin/navbar.ejs") %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>

  <div class="page-wrapper">

    <div class="container-fluid">

      <div class="row page-titles">
        <div class="col-md-5 align-self-center">
          <h3 class="text-themecolor">User list</h3>

        </div>

      </div>

      <!--djlkjlkajlkjkldajkkjslj-->
      <div class="row">
        <!-- column -->
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">All Users</h4>
              <h6 class="card-subtitle">Users <code>Table</code></h6>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Name</th>      
                      <th>Email</th>                        
                      <th>Username</th>
                      <th>Mobile No.</th>
                      <th>Joined Date</th>
                      <th>status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% user.forEach((element,index)=> { %>
                    <tr>
                      <td> <%=index+1 %></td>
                      <td> <%=element.firstname %> <%=element.lastname %> </td>
                      <td><%=element.email %></td>
                      <td><%=element.username %></td>
                      <td><%=element.phone %></td>
                     <td>
                      <% const date=element.date %>
                      <%= moment().format('MMMM Do YYYY, h:mm:ss a') %>

                     </td>
                      <td>
                      <% if(element.status!==0){%>
                        <button type="button" class="btn btn-primary" onclick="validate1('<%= element._id %>')">
                          block
                        </button>
                      <% }else{ %>
                        <button type="button" class="btn btn-danger" onclick="validate('<%= element._id %>')">
                          unblock
                        </button>
                        </td>
                       
                  </tr>
                  <% } %>
                  <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
     


    <script>
      function validate(categoryId) {
          Swal.fire({
              title: 'Are you sure?',
              text: "You wan't to unblock!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'yes, unblock!'
          }).then((result) => {
                 if (result.isConfirmed) {
                              $.ajax({
                                  url: '/admin/unblockUser/' + categoryId,
                                  method: 'get',
                                  success: (response) => {
                                      Swal.fire({
                                          title: 'unblock!',
                                          text: 'Your unblocked the user',
                                          icon: 'success',
                                          showConfirmButton: false
                                      })
                                      setTimeout(() => {
                                          location.reload()
                                      }, 1000);
                                  }
                              })
                          }
          })
      }
  </script>
    <script>
      function validate1(categoryId) {
          Swal.fire({
              title: 'Are you sure?',
              text: "You wan't to block!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#3085d6',
              cancelButtonColor: '#d33',
              confirmButtonText: 'Yes, block!'
          }).then((result) => {
                 if (result.isConfirmed) {
                              $.ajax({
                                  url: '/admin/blockUser/' + categoryId,
                                  method: 'get',
                                  success: (response) => {
                                      Swal.fire({
                                          title: 'blocked!',
                                          text: 'Your are blocked the user.',
                                          icon: 'success',
                                          showConfirmButton: false
                                      })
                                      setTimeout(() => {
                                          location.reload()
                                      }, 1000);
                                  }
                              })
                          }
          })
      }
  </script>
  











