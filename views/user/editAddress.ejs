<%- include("../layouts/user/header.ejs") %>

  <%- include("../layouts/user/headers.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.3.js"
      integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <section style="background-color: #ffffff;" id="address">
      <div class="container py-3">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb" class=" ">
              <ol class="breadcrumb mb-0">

              </ol>
            </nav>
          </div>
        </div>
        <section class="vh-100 gradient-custom">
          <div class="container py-5 h-100 ">
            <div class="row justify-content-center align-items-center h-100">
              <div class="col-12 col-lg-9 col-xl-12">

                <h3 class="mb-12 pb-2 pb-md-0 mb-md-5">Edit Address</h3>
                <% edit.address.forEach((element)=>{ %>
                  <form action="/editAddress/<%=element._id %>" method="post" id="editAddress">
                    <div class="row">
                      <div class="col-md-12 mb-4">
                        <div class="form-outline">
                          <div id="alertpasswordUser1" class="alert alert-danger" role="alert" style="display: none;">

                          </div>
                          <div id="alertpasswordUser" class="alert alert-success" role="alert" style="display: none;">

                          </div>
                          <label class="form-label">House Name</label>
                          <input type="text" name="houseName" value="<%=element.houseName %>"
                            class="form-control form-control-lg" />

                        </div>

                      </div>

                      <div class="col-md-6 mb-4">

                        <div class="form-outline">
                          <label class="form-label">Street</label>
                          <input type="text" name="street" value="<%=element.street %>"
                            class="form-control form-control-lg" />

                        </div>
                        <input type="hidden" name="id" value="<%=element._id %>">
                      </div>
                      <div class="col-md-6 mb-4">

                        <div class="form-outline">
                          <label class="form-label">District</label>
                          <input type="text" value="<%=element.district %>" name="district"
                            class="form-control form-control-lg" />

                        </div>

                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-6 mb-4 d-flex align-items-center">

                        <div class="form-outline datepicker w-100">
                          <label class="form-label">State</label>
                          <input type="text" value="<%=element.state %>" name="state"
                            class="form-control form-control-lg" id="birthdayDate" />

                        </div>

                      </div>

                      <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline">
                          <label class="form-label">Country</label>
                          <input type="text" value="<%=element.country %>" name="country"
                            class="form-control form-control-lg" />

                        </div>

                      </div>
                    </div>


                    <div class="row">
                      <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline">
                          <label class="form-label">pincode</label>
                          <input type="Number" value="<%=element.pincode %>" id="emailAddress" name="pincode"
                            class="form-control form-control-lg" />

                        </div>

                      </div>
                      <div class="col-md-6 mb-4 pb-2">

                        <div class="form-outline">
                          <label class="form-label">Phone Number</label>
                          <input type="Number" value="<%=element.phone %>" name="phone"
                            class="form-control form-control-lg" />

                        </div>

                      </div>
                    </div>

                    <% }) %>

                      <div class="mt-4 pt-2">

                        <button class=" btn-lg " type="submit">Submit</button>
                      </div>

                  </form>
              </div>
            </div>
          </div>
      </div>
      </div>
    </section>

    <script>
      const form=document.querySelector('form');
      $('#editAddress').submit(function (e) {
        e.preventDefault();
        var formData = $(this).serialize();
        const inputs = document.querySelectorAll('form input')
        let inputFieldNull = false
        for (let i = 0; i < inputs.length; i++) {
          if (inputs[i].value.trim() == "") {
            inputFieldNull = true
            $('#alertpasswordUser1').attr({ style: "display: block" }).html("All fields Required")
            setTimeout(() => {
              $('#alertpasswordUser1').hide()
            }, 3000)
          } 
        }if (!inputFieldNull) {
          inputFieldNull = true
            $('#alertpasswordUser').attr({ style: "display: block" }).html("Saved")
            setTimeout(() => {
              $('#alertpasswordUser1').hide()
            }, 3000)
            form.submit()
          }
      })

    </script>
    <%- include("../layouts/user/footer.ejs") %>