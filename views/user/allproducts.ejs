<%- include("../layouts/user/header.ejs") %>
<%- include("../layouts/user/headers.ejs") %>

    <!-- ***** Products Area Starts ***** -->
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                       
                            <h2>
                                ALL PRODUCTS
                            </h2>
                            <span>
                                Here all you needs
                            </span>
                         
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <% products.forEach((element)=> { %>
                <div class="col-lg-4">
                    <div class="item">

                        <div class="thumb">

                            <div class="hover-content">
                                <ul>
                                    <li><a href="/singleproduct/<%= element._id %>"><i class="fa fa-eye"></i></a></li>
                                    <li><a href="/addtoWishlist/<%= element._id %>"><i class="fa fa-star"></i></a></li>
                                    <li><a href="/addcart/<%= element._id %>"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <img src="/product_images/<%= element.image[0] %>" alt="">
                        </div>
                        <div class="down-content">
                            <h4>
                                <%= element.name %>
                            </h4>
                            <span>RS.  <%= element.price%></span>
                            <ul class="stars">
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                            </ul>
                        </div>

                    </div>
                </div>

                <% }) %>
            </div>
        </div>

    </section>

    <!-- ***** Footer Start ***** -->
    <%- include("../layouts/user/footer.ejs") %>