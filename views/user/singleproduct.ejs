  <!-- ***** Product Area Starts ***** -->

  <section class="section" id="product">
    <%singleproduct.forEach((element)=> { %>

      <div class="container">
        <div class="row container-fluid">
          <div class="col-lg-8">
            <div class="left-images">

              <!-- <img class="big_img" style="width: 450px; "  src="/product_images/<%=element.image[2] %>" alt=""> -->

              <div class="img-zoom-container1 row pt-5">
                <img id="myimage" style="width: 350px; height: 350px;" class="big_img"
                  src="/product_images/<%=element.image[2] %>">
                <div id="myresult" class="img-zoom-result"></div>
              </div>

            </div>
            <div class="left-images">



              <img class="small_img" style="width: 200px;" src="/product_images/<%=element.image[1] %>" alt="">
              <img class="small_img" style="width: 200px;" src="/product_images/<%=element.image[3] %>" alt="">
              <img class="small_img" style="width: 200px;" src="/product_images/<%=element.image[0] %>" alt="">

            </div>
          </div>
          <div class="col-lg-4">
            <div class="right-content">
              <h4>
                <%=element.name %>
              </h4>
              <span class="price">Rs.<%=element.price %></span>
              <ul class="stars">
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
                <li><i class="fa fa-star"></i></li>
              </ul>
              <span>
                <%=element.description %>
              </span>
              <div class="quote">
                <i class="fa fa-quote-left"></i>
                <p>LISTEn to listen</p>
              </div>
              <div class="quantity-content">
                <div class="left-content">
                  <h6>No. of Orders</h6>
                </div>
                <div class="right-content">
                  <!-- <div class="quantity buttons_added">
                    <input type="button" value="-" class="minus"><input type="number" step="1" min="1" max=""
                      name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern=""
                      inputmode=""><input type="button" value="+" class="plus">
                  </div> -->

                </div>
              </div>
              <div class="total">

                <% if(typeof cartcheck !=='undefined' ){ %>
                  <div class="main-border-button pb-2"><a href="/cart">view Cart</a></div>
                  <% }else{ %>
                    <div class="main-border-button pb-2" onclick="addToCart('<%= element._id %>')"><a>Add to Cart</a>
                    </div>

                    <% } %>
                      <h4>Total:<%=element.price %>
                      </h4>
                      <div class="main-border-button"><a href="#">Buy Now </a></div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>

  </section>
  <script>
    function addToCart(proId) {
      console.log(proId);
      $.ajax({
        url: '/addcart/' + proId, // replace with the URL of your server-side script
        type: 'get', // use POST method

        success: (response) => {
          console.log(response);
          if (response.done) {
            Swal.fire({
              position: 'top-end',
              icon: 'success',
              title: 'Added to Cart',
              showConfirmButton: false,
              timer: 1500
            })
          } else if (response.exist) {
            Swal.fire({
              position: 'top-end',
              
              title: 'Already in Cart',
              showConfirmButton: false,
              timer: 1500
            })
          } else {
            location.href = '/login'
          }

        }
      })
    }
  </script>
