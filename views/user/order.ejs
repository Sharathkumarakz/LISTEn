<script>
  
     //main form submit for success
     $('#returning').submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.ajax({
                    url: '/returnOrder', // replace with the URL of your server-side script
                    type: 'POST', // use POST method
                    data: formData,
                    success: (response) => {
                        // handle the response from the server
                        console.log("yes")
                        console.log(response);
                        if (response.error) {
                          Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: 'Select a Reason.',
                            })
                        } else if (response.status){
                         location.reload()
                        }
                    },

                });
            });




    function validate(orderId,value) {
        value = value
        orderId = orderId
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Cancel it!'
        }).then((result) => {
          if (result.isConfirmed) {
            $.ajax({
                url: '/cancelOrder',
                data: {
                    orderId: orderId,
                    value: value
                },
                method: 'post',
                success: (response) => {
                    
                        Swal.fire({
                            title: 'Cancelled!',
                            text: 'Your Order has been Cancelled.',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                        document.getElementById(orderId).innerHTML = response.status
                   
                }
            })
          }
        })
    }

  </script>


