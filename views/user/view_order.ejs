<%- include("../layouts/user/header.ejs") %>

<%- include("../layouts/user/headers.ejs") %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>


<section>
  <div class="card" style="background-color: #f1f1f1;">
    <div class="card-body">
      <div class="container mb-5 mt-3">
        <div class="row d-flex align-items-baseline">
          <div class="col-xl-9">
            <p style="color: #4b7dba;font-size: 20px;">Invoice &gt;&gt; <strong>ID: #123-123</strong></p>
          </div>
        </div>
        <div class="container">
          <div class="col-md-12">
            <div class="text-center">
              <i class="fa fa-receipt fa-4x ms-0" style="color:#8f8061 ;"></i>
              <p class="pt-2">Order View</p>
            </div>
          </div>
          <div class="row">
            <div class="col-xl-8">
              <ul class="list-unstyled">
                <li class="text-muted">To: <span style="color:#8f8061 ;"> <%=order.userId.firstname %>  <%=order.userId.lastname %></span></li>
                <li class="text-muted">Address:<span>    <%=order.deliveryAddress%></span></li>
            
              </ul>
            </div>
            <div class="col-xl-4">
              <p class="text-muted">Invoice</p>
              <ul class="list-unstyled">
                <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                    class="fw-bold">ID:</span><%=order.orderId %></li>
                <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                    class="fw-bold">Creation Date: </span><% const date=order.date %>   <%=moment(date).format("MMM Do YY");   %></li>
<% if (order.status=="delivered"){%>
   <% if(order.deliveryDate!=null){%>

                    <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                      class="fw-bold">Delivery Date: </span><%=order.deliveryDate.toLocaleDateString()%></li>
                      <%}%>
                      <%}%>
                <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061;"></i> <span
                    class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                      <%=order.status %></span></li>
                      <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061;"></i> <span
                        class="me-1 fw-bold">Payment Method:</span><span class="badge bg-warning text-black fw-bold">
                          <%=order.paymentType %></span></li>
              </ul>
            </div>
          </div>
          <% order.product.forEach((element)=>{%>
       
          <div class="row my-2 mx-1 justify-content-center">
            
            <div class="col-md-2 mb-4 mb-md-0">
              <div class="
                          bg-image
                          ripple
                          rounded-5
                          mb-4
                          overflow-hidden
                          d-block
                          " data-ripple-color="light">
                <img src="/product_images/<%=element.productId.image[2] %>"
                  class="w-100" height="100px" alt="Elegant shoes and shirt" />
                <a href="#!">
                  <div class="hover-overlay">
                    <div class="mask" style="background-color: hsla(0, 0%, 98.4%, 0.2)"></div>
                  </div>
                </a>
              </div>
            </div>
        
            <div class="col-md-7 mb-4 mb-md-0">
              <p class="fw-bold"> <%=element.productId.name %> </p>
              <p class="mb-1">
                <span class="text-muted me-2">Quantity:</span><span> <%=element.quantity %> </span>
              </p>
              <p>
                <span class="text-muted me-2">Price:</span><span> <%=element.singlePrice %> </span>
              </p>
            </div>
            <div class="col-md-3 mb-4 mb-md-0">
              <h5 class="mb-2">
                <s class="text-muted me-2 small align-middle"></s><span class="align-middle"><%=element.singleTotal %></span>
              </h5>
              <p class="text-danger"><small></small></p>
            </div>
          </div>
          <%})%>
          <hr>
          <div class="row">
            <div class="col-xl-8">
              <p class="ms-3">LISTEn Private limited</p>
            </div>
            <div class="col-xl-3">
              <ul class="list-unstyled">
                <li class="text-muted ms-3"><span class="text-black me-4">subtotal</span> <%=order.total %></li>

                <li class="text-muted ms-3"><span class="text-black me-4">Coupon Used :-</span> <%=order.coupon %></li>
                
                <% if(order.discount>0){%>
                <li class="text-muted ms-3"><span class="text-black me-4">Discount</span> <%=order.discount %></li>
                <%}else{%>
                <li class="text-muted ms-3"><span class="text-black me-4">Discount</span><span class="pl-3">0</span></li>
             <%}%>
                <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Shipping</span><span class="pl-3">0</span></li>
              </ul>
              <p class="text-black float-start"><span class="text-black me-3"> Total Amount</span><span
                  style="font-size: 25px;">  â‚¹ <%=order.total %></span></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 <%- include("../layouts/user/footer.ejs") %>